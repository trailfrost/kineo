{
  "name": "kineo-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "test": "vitest",
    "format": "prettier --check .",
    "format!": "prettier --write .",
    "lint": "eslint .",
    "lint!": "eslint --fix .",
    "check": "tsc -b --noEmit packages/*",
    "build": "rimraf packages/*/dist && tsc -b packages/*",
    "refresh": "pnpm build && pnpm install",
    "cloc": "cloc --exclude-dir=dist,node_modules packages/*"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "eslint": "^9.32.0",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.39.0",
    "vitest": "^3.2.4"
  }
}
