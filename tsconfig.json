{
  "compilerOptions": {
    "target": "es2015",
    "module": "node16",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@test/*": ["tests/*"]
    }
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.*", "tests"]
}
